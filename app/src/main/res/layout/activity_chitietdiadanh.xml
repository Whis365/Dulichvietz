<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chitietdiadanh">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/imgChitiet"
                    android:src="@drawable/banner"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtTendiadanh"
                    android:textSize="25sp"
                    android:textColor="#03A9F4"
                    android:gravity="center"
                    android:text="Tên địa danh"
                    android:textStyle="bold"
                    />


                <RelativeLayout
                    android:id="@+id/btnMap"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    >

                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv1"
                    android:text="Xem vị trí"
                    android:textColor="#FF1F1F"
                    />

                <ImageView

                    android:layout_below="@id/tv1"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:layout_width="60dp"
                    android:layout_height="2px"
                    android:src="@drawable/gachchan"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_location_on_black_24dp"
                    />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtChitietMotadd"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Mô tả địa danh"
                    />
            </LinearLayout>
        </ScrollView>


</LinearLayout>